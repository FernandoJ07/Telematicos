// Zona directa como esclava
zone "empresa.local" {
    type slave;
    file "/var/cache/bind/db.empresa.local";
    masters { 192.168.50.3; };      # IP del maestro
};

// Zona inversa como esclava
zone "50.168.192.in-addr.arpa" {
    type slave;
    file "/var/cache/bind/db.192";
    masters { 192.168.50.3; };      # IP del maestro
};